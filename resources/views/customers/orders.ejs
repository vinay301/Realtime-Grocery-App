
<section class="orders light-section">
    <div class="container mx-auto pt-12">
        <h1 class="font-bold text-lg mb-4">All Orders</h1>
        <% if(messages.success){ %>
        <div id="success-alert" class="flex items-center bg-green-500 text-white text-sm font-bold px-4 py-3" role="alert">
            <div class="info-logo text-white">
                <img src="/images/info.svg" alt="" srcset="">
            </div>
            <p><%= messages.success %></p>
        </div>
        <% } %>
        <div class="relative overflow-x-auto">
            <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-100 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3 rounded-s-lg">
                           Orders
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Phone
                         </th>
                        <th scope="col" class="px-6 py-3">
                            Address
                        </th>
                        <th scope="col" class="px-6 py-3 rounded-e-lg">
                            Date & Time
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <% if(orders.length) { %>
                        <% orders.forEach((order) => { %>
                            <tr class="bg-white dark:bg-gray-800">
                                <td class="px-6 py-4">
                                    <a class="link" href="/customer/orders/<%= order._id %>"><%= order._id %></a>
                                </td>
                                <td class="px-6 py-4">
                                    <%= order.phone %>
                                </td>
                                <td class="px-6 py-4">
                                    <%= order.address %>
                                </td>
                                <td class="px-6 py-4">
                                    <%= moment(order.createdAt).format('MMMM Do YYYY, hh:mm A') %>
                                </td>
                            </tr>
                        <% }) %>
                   <% } else { %>
                        <tr>
                            <td class="p-4"><span>No orders found!</span></td>
                        </tr>
                    <% } %>
                </tbody>
              
            </table>
        </div>
    </div>


</section>